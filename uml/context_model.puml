@startuml context_model
!theme plain
hide empty members
skinparam rectangle {
    BackgroundColor White
    BorderColor Black
    StereotypeFontSize 11
}

' Center System
rectangle "Parking Management\nSystem" as PMS <<system>>

' External Systems
rectangle "Payment\nGateway" as Payment <<system>>
rectangle "IoT Sensor\nNetwork" as Sensors <<system>>
rectangle "ANPR Camera\nSystem" as ANPR <<system>>
rectangle "Barrier Gate\nController" as Gates <<system>>
rectangle "On-site Display\nSystem" as Displays <<system>>
rectangle "Security\nAlert System" as Security <<system>>

' Relationships
PMS -- Payment
PMS -- Sensors
PMS -- ANPR
PMS -- Gates
PMS -- Displays
PMS -- Security

@enduml
